<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                app:layout_collapseMode="none">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"
                    tools:background="@color/white"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPlay"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="?selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_play"
                    app:tint="@color/black"/>

            </FrameLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-16dp"
        android:background="@drawable/film_details_bg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFilmName"
                style="@style/TitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="@dimen/detail_film_name_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Venom" />

            <View
                android:id="@+id/vDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/default_margin"
                android:background="@color/description_text_color"
                android:layout_marginHorizontal="@dimen/default_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFilmName" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgCategories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginHorizontal="@dimen/default_margin"
                app:layout_constraintEnd_toStartOf="@id/ivShare"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vDivider" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLike"
                android:layout_width="@dimen/film_details_action_btns_size"
                android:layout_height="@dimen/film_details_action_btns_size"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toEndOf="@id/vDivider"
                app:layout_constraintTop_toTopOf="@id/cgCategories"
                app:srcCompat="@drawable/ic_favorite"
                app:tint="@color/description_text_color" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivShare"
                android:layout_width="@dimen/film_details_action_btns_size"
                android:layout_height="@dimen/film_details_action_btns_size"
                android:layout_marginEnd="@dimen/default_margin"
                android:background="?selectableItemBackgroundBorderless"
                android:rotation="@integer/material_motion_duration_long_1"
                app:layout_constraintEnd_toStartOf="@id/ivLike"
                app:layout_constraintTop_toTopOf="@id/ivLike"
                app:srcCompat="@drawable/ic_send"
                app:tint="@color/description_text_color" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFilmDescTitle"
                style="@style/TitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/film_details_desc_title"
                app:layout_constraintStart_toStartOf="@id/vDivider"
                app:layout_constraintTop_toBottomOf="@id/cgCategories" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFilmDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_default_margin"
                android:textColor="@color/description_text_color"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/ivLike"
                app:layout_constraintStart_toStartOf="@id/tvFilmDescTitle"
                app:layout_constraintTop_toBottomOf="@id/tvFilmDescTitle"
                tools:text="okmevoemrvevn eornerongergn oerngerngierjn oienrginin rng n nggiengrieng ejrngejnrgekrjng erngiejnrgeijgnei" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStarCastTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TitleTextStyle"
                app:layout_constraintTop_toBottomOf="@id/tvFilmDesc"
                app:layout_constraintStart_toStartOf="@id/tvFilmDesc"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/film_details_star_cast_title"/>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tvStarCastTitle"
                android:layout_marginTop="@dimen/small_default_margin"
                tools:listitem="@layout/view_films_item"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>