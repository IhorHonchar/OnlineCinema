<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/cvFilm"
android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/default_margin"
    android:layout_height="wrap_content"
    app:strokeWidth="1dp"
    app:strokeColor="@color/description_text_color"
app:cardCornerRadius="@dimen/default_card_corner_radius"
app:rippleColor="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_margin"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSettingImage"
            android:layout_width="35dp"
            android:layout_height="30dp"
            tools:srcCompat="@drawable/ic_bookmark_empty"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSettingTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/TitleTextStyle"
            android:layout_marginStart="@dimen/default_margin"
            tools:text="hgjhgjguygjg"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_right"
            app:tint="@color/description_text_color"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>