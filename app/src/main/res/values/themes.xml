<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineCinema" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlHighlight">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="SubtitleTextStyle" parent="TitleTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CategoryFilmTextStyle" parent="TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="DefaultTextStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/description_text_color</item>
    </style>

    <style name="Theme.OnlineCinema.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OnlineCinema.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OnlineCinema.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>